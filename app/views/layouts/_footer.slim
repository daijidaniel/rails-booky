- i18n_scope = "footer"

footer.p-5
  hr.is-gray-20
  .container
    .columns
      .column
        .brand__section
          = image_tag "logo-gray", class: "brand__section-logo", loading: "lazy"
          .mt-2
            p Â© Kimura Glamping 2020
            p = t 'rights_reserved', scope: i18n_scope
          .brand__section-socialmedia.mt-5
            = link_to "https://instagram.com/kimuraglamping", target: "_blank" do
              = image_tag "icons/ig_logo", class: "mr-5", loading: "lazy", alt: "facebook"
            = link_to "https://facebook.com/kimuraglamping", target: "_blank" do
              = image_tag "icons/fb_logo", loading: "lazy", alt: "facebook"
      .column
        h3.title = t "help_center", scope: i18n_scope
        ul.content.footer__links
          li = link_to t('tos', scope: i18n_scope), "/terms-of-service", target: "_blank", class: "footer__link"
          li = link_to t('privacy', scope: i18n_scope), "/privacy-policy", target: "_blank", class: "footer__link"
          li = link_to t('faq', scope: i18n_scope), "/faq", class: "footer__link"
          / li = link_to t('cancel', scope: i18n_scope), "", class: "footer__link"
      .column
        h3.title = t "products", scope: i18n_scope
        ul.content.footer__links
          li = link_to "Amaterasu", unit_path('amaterasu'), class: "footer__link"
          li = link_to "Benzaiten", unit_path('benzaiten'), class: "footer__link"
          li = link_to "Tenjin", unit_path('tenjin'), class: "footer__link"
          li = link_to "Hotei", unit_path('hotei'), class: "footer__link"
          
      .column
        h3.title = t "intouch", scope: i18n_scope
        = render 'layouts/contact_form'

    hr.is-gray
      p.is-centered-middle#contact
        | Designed and developed by &nbsp;
        = link_to "https://jalappeno.pl", target: "_blank" do
          = image_tag "icons/jalapp_logo", loading: "lazy"

